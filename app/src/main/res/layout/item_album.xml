<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
       >

    <data>

        <variable
            name="albumitemsviewmodel"
            type="com.example.yasma.viewmodel.AlbumItemsViewModel"/>
    </data>


    <RelativeLayout
        android:id="@+id/rv_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{albumitemsviewmodel::onItemClick}">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text='@{albumitemsviewmodel.title}'
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            android:padding="@dimen/fab_margin"
            android:layout_margin="@dimen/fab_margin"
            tools:text="mr gary allen"
            />
        <View android:layout_width="match_parent" android:layout_height="2dp"
              android:background="@android:color/black"
            android:layout_below="@+id/title"/>

    </RelativeLayout>

</layout>